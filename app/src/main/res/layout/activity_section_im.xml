<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_section_im"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.aku.hassannaqvi.pssp.SectionIMActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Fields start -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/ima"

            />

        <EditText
            android:id="@+id/ima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ima"
            android:inputType="textPersonName" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/imaf" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/imaf"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/imrwic"

            />

        <RadioGroup
            android:id="@+id/imrwic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >

            <RadioButton
                android:id="@+id/imsb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mnsibling"

                />

            <RadioButton
                android:id="@+id/imoth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mnOther"

                />

            <EditText
                android:id="@+id/imrwicx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/imrwicx"

                />

        </RadioGroup>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/imb"

            />

        <RadioGroup
            android:id="@+id/imb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/imba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mnMale" />

            <RadioButton
                android:id="@+id/imbb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mnFemale"

                />

        </RadioGroup>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/imc" />

        <RadioGroup
            android:id="@+id/imc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <RadioButton
                android:id="@+id/imca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mnYES" />


            <RadioButton
                android:id="@+id/imcb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mnNO" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/imd"


            />

        <DatePicker
            android:id="@+id/imd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:paddingTop="8dp"
            android:spinnersShown="true" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/ime" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/imey" />

        <EditText
            android:id="@+id/imey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/imey"

            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/imem" />

        <EditText
            android:id="@+id/imem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/imem"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/imed" />

        <EditText
            android:id="@+id/imed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/imed"

            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/imf" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/imfa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mnYES"

                />
<RadioButton
                android:id="@+id/imfa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mnYES"

                />



        </RadioGroup>


    </LinearLayout>

</ScrollView>